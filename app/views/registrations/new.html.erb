<div class="container">
  <h1>Register for a new Postcards Account</h1>
  <%= simple_form_for @user do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit "Register", class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
